<%- include("partials/header"); -%>
<h1>Retailers</h1>

<div class="row">
    <% distributors.forEach(function(dist){ %>
        <div class="col-sm-4">
            <div class="card" style="width: 100%;">
                <img src="<%= dist.Picture %>" class="card-img-top" style=" display:block; height: 200px; width: 200px; margin-left: auto; margin-right: auto;" alt="...">
                <div id= "<%= dist._id %>"class="card-body">
                  <h5 class="card-title"><%= dist.Name %></h5>
                  <p class="card-text"><%= dist.Info.substring(0,100) + "..." %>></p>
                  <a href="producer/distributor/<%= dist._id%>" class="btn btn-success">Read More</a>
                </div>
              </div>
        </div>
    <% }); %>
  </div>

<%- include("partials/footer"); -%>
